%html
	%head
		%title Volunteer Reminder
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= javascript_include_tag :defaults, "rails.validations"
		= csrf_meta_tags
		-# JQuery
		= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'
		-# Bootstrap
		= stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css", :media => "all"
		= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"
	%body
		%div#topbar
			.container
				.row
					.col-sm-12
						- if user_signed_in?
							- if current_user.is_admin?
								= link_to 'Users', user_index_path, :style=>"float:left;margin-right:20px;", :class => "btn btn-default"
							= link_to 'Log out', destroy_user_session_path, :method => :delete, :style=>"float:right;", :class => "btn btn-default"
							%p{:style=>"float:right;margin-top:9px;margin-right:20px;"}
								= current_user.email
							.glyphicon.glyphicon-user{:style=>"float:right;margin-top:10px;margin-right:7px"}
							= link_to '', root_path, :class => "glyphicon glyphicon-home btn", :style=>"color:white;float:left;font-size:18pt;"
							
						%h1.text-center Volunteer Reminder
		- if flash[:success]
			.container
				.row
					.alert.alert-success{:style=>"margin:20px;"}
						= flash[:success]
		- if flash[:notice]
			.container
				.row
					.alert.alert-success{:style=>"margin:20px;"}
						= flash[:notice]
		- elsif flash[:warning]
			.container
				.row
					.alert.alert-danger{:style=>"margin:20px;"}
						= flash[:warning]
		%br
		= yield
