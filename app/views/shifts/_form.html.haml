= form_for(@shift) do |f|
  - if @shift.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@shift.errors.count, 'error')
        prohibited this shift from being saved:
      %ul
        - @shift.errors.full_messages.each do |msg|
          %li= msg
  %div.field
    = f.label :title
    %br
    = f.text_field :title
  %div.field
    = f.label :description
    %br
    = f.text_field :description
  %div.field
    = f.label :start
    %br
    = f.text_field :start
  %div.field
    = f.label :end
    %br
    = f.text_field :end
  %div.field
    = f.label :event
    %br
    = f.text_field :event
  %div.actions
    = f.submit