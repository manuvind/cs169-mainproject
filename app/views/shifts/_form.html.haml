= form_for([@event, @shift]) do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :start
    %br
    = f.datetime_select :start
  .field
    = f.label :email
    %br
    = f.text_area :email
  .field
    = f.label :end
    %br
    = f.datetime_select :end
  .field
    = f.label :reminder
    %br
    = f.datetime_select :reminder
  .field
    = f.label :volunteer
    %br
    = f.select :volunteer_id, Volunteer.all.map {|v| [v.name, v.id]}
    = link_to 'New Volunteer', new_volunteer_path
  .actions
    = f.submit