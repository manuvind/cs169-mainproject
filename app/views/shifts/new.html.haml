%h1 New shift

= form_for @shift, url: create_shift_event_path(@event_id) do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :start
    %br
    = f.datetime_select :start
  .field
    = f.label :end
    %br
    = f.datetime_select :end
  .actions
    = f.submit

= link_to 'Back', shift_event_path(@event_id)